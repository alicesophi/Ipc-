import turtle
import math


def plottingFibonacci(number_of_interations):
    input_one = 0
    input_two = 1
    square_one = input_one
    square_two = input_two

    square.pencolor("red")

    square.forward(input_two * factor)
    square.left(90)
    square.forward(input_two * factor)
    square.left(90)
    square.forward(input_two * factor)
    square.left(90)
    square.forward(input_two * factor)

    fibonacciSeries = square_two
    square_two = square_two + square_one
    square_one = fibonacciSeries

    for i in range(1, number_of_interations):
        square.backward(square_one * factor)
        square.right(90)
        square.forward(square_two * factor)
        square.left(90)
        square.forward(square_two * factor)
        square.left(90)
        square.forward(square_two * factor)

        fibonacciSeries = square_two
        square_two = square_two + square_one
        square_one = fibonacciSeries

    square.penup()
    square.setposition(factor, 0)
    square.seth(0)
    square.pendown()

    square.pencolor("green")

    square.left(90)
    for i in range(number_of_interations):
        print(input_two)
        formula = math.pi * input_two * factor / 2
        formula /= 90
        for j in range(90):
            square.forward(formula)
            square.left(1)
        fibonacciSeries = input_one
        input_one = input_two
        input_two = fibonacciSeries + input_two


factor = 1
number_of_interations = int(input('Enter the number of iterations (must be > 1): '))
if number_of_interations > 0:
    print(f"Fibonacci series for {number_of_interations} elements :")
    square = turtle.Turtle()
    square.speed(100)
    plottingFibonacci(number_of_interations)
    turtle.done()
else:
    print("Number of iterations must be > 0")
